{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile"
  },
  "deploy": {
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3,
    "startCommand": "bash -c 'sed -i s/listen\\ 80/listen\\ ${PORT}/g /etc/nginx/sites-available/default && /start.sh'"
  }
}
